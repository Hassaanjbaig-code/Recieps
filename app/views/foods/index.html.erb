<a href="/foods/new">
    <button type="button" class="btn btn-primary">Add Food</button>
</a>

<table class="table">
  <thead>
     <tr>
      <th scope="col">Food</th>
      <th scope="col">Measurement unit</th>
      <th scope="col">Unit Price</th>
      <th scope="col">Quantity</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
    <tr>
      <th scope="row"><%= food.name %></th>
      <td><%= food.measurement_unit  %></td>
      <td>$<%= food.price %></td>
      <td><%= food.quantity %></td>
      <td><%= button_to "Delete", food_path(food), method: :delete, data: { confirm: "Are you sure?" } %></td>
</td>
    </tr>
    <% end %>
  </tbody>
</table>