
<div class='container'>
<h2 class="h4 mb-3">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "needs-validation", novalidate: true }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="mb-3">
    <%= f.label :password, "New password", class: "form-label" %><br />
    <% if @minimum_password_length %>
      <small class="text-muted">(<%= @minimum_password_length %> characters minimum)</small><br />
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
    <div class="invalid-feedback">Please enter a password.</div>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
    <div class="invalid-feedback">Please confirm your password.</div>
  </div>

  <div class="text-center">
    <%= f.submit "Change my password", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>