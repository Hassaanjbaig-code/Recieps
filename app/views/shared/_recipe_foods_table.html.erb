<table class="table">
  <thead>
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Measurement unit</th>
      <th scope="col">Value</th>
      <th scope="col">Quantity</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @recipe.recipe_foods.each do |recipe_food| %>
      <tr>
        <th scope="row"><%= recipe_food.food.name %></th>
        <td><%= recipe_food.food.measurement_unit %></td>
        <% value = recipe_food.food.price * recipe_food.quantity %>
        <td>$<%= value %></td>
        <td><%= recipe_food.quantity %></td>
        <td><%= button_to "Delete", recipe_recipe_food_path(@recipe, recipe_food.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
