<div class='container'>
<%= form_with model: @food, url: recipes_path, class: "form-horizontal container-md" do |f| %>
  <div class="form-group">
  <%= f.label :quantity, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.number_field :quantity, class: "form-control" %>
  </div>
</div>

<div class="form-group mb-2">
  <%= f.label "Food", class: "col-sm-2 control-label" %>
  <div class="col-sm-1">
  <%= f.select :item, options_for_select(['Choose...', 'Flour', 'Sugar', 'Milk', 'Eggs']), {}, class: "form-control" %>
  </div>
</div>

<%= f.submit "Save", class: "btn btn-primary" %>
<% end %>
</div>