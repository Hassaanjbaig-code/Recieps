
<h2>Recipe#<span><%=@recipe.id %></span></h2>
<p>
    
 <li> Preparation time: <%= @recipe.preparation_time %> min/hrs</li>
   <li> Cooking time: <%= @recipe.cooking_time %>min/hrs</li>
   <li> Preparation Steps<%= @recipe.description %> </li>
    <%= @recipe.public %>
    </p>


    <%= button_to "Generate shopping list", "/general_shopping_list/", method: :get %>
    <%= button_to "Add Ingredient", "/recipes/#{@recipe.id}/", method: :get %>

    <table class="table">
  <thead>
     <tr>
      <th scope="col">Food</th>
      <th scope="col">Measurement unit</th>
      <th scope="col">Unit Price</th>
      <th scope="col">Qunatity</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
    <tr>
      <th scope="row"><%= food.name %></th>
      <td><%= food.measurement_unit  %></td>
      <td>$<%= food.price %></td>
      <td><%= food.quantity %></td>
      <td><%= button_to "Delete", food, method: :delete, data: { confirm: "Are you sure?" } %>
</td>
    </tr>
    <% end %>
  </tbody>
</table>



